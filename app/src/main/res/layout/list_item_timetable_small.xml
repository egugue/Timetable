<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_large"
    android:layout_marginBottom="@dimen/spacing_large"
    android:layout_marginRight="@dimen/spacing_large"
    android:layout_marginLeft="@dimen/spacing_large"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:id="@+id/list_item_timetable_depature_time"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35sp"
        android:gravity="center_vertical|right"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/list_item_timetable_depature_time"
        android:layout_toEndOf="@+id/list_item_timetable_depature_time"
        android:layout_marginLeft="16dp"
        >

        <TextView
            android:id="@+id/list_item_timetable_train_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通"
            android:textSize="11sp"
            android:layout_marginBottom="1dp"
            />

        <TextView
            android:id="@+id/list_item_timetable_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="池袋・新宿方面"
            android:textSize="11sp"
            />

    </LinearLayout>

</RelativeLayout>
