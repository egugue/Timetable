<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="htoyama.timetable" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TimetableApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".presentation.activities.TopActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activities.TimetableActivity"
            android:label="@string/title_activity_timetable" >
        </activity>
        <activity
            android:name=".presentation.activities.InputActivity"
            android:label="@string/title_activity_input" >
        </activity>
    </application>

</manifest>
